<div class="attachments">
<div class="contextual">
</div>
<table>
<% for attachment in attachments %>
<tr>
  <td>
    <%= link_to attachment.filename, service_download_url(attachment), class: 'icon-only icon-download ', title: l(:button_download), download: true, icon: 'download' -%>
  </td>
  <td><%= attachment.description unless attachment.description.blank? %></td>
  <% if attachment.author.is_a?(AnonymousUser) %>
  <td>
    <span class="author"><%= Time.parse(attachment.created_on).in_time_zone("Singapore").strftime("%d-%m-%Y %H:%M:%S") %></span>
  </td>
  <% else %>
  <td>
    <span class="author"><%= attachment.author %>, <%= Time.parse(attachment.created_on).in_time_zone("Singapore").strftime("%d-%m-%Y %H:%M:%S") %></span>
  </td>
  <% end %>
</tr>
<% end %>
</table>
<% if defined?(thumbnails) && thumbnails %>
  <% images = attachments.select(&:thumbnailable?) %>
  <% if images.any? %>
  <div class="thumbnails">
    <% images.each do |attachment| %>
      <%= thumbnail_tag(attachment) %>
    <% end %>
  </div>
  <% end %>
<% end %>
</div>
